<%= form_with(:format json) do |form| %>
  <div class = "field">
    <%= form.label :text %><br/>
    <%= form.text_area :text, size: "40x7" %>
  </div>

  <div class = "field">
    <%= form.label :privacy_status %>
    <%= form.select :privacy_status, [["全体に公開",'everyone'],["フォロワーのみに公開",'followers'],["自分のみに公開",'me']] %>
  </div>
  
  <div class = "field">
    <%= form.label :image1 %>
    <%= form.file_field :image1 %>
  </div>

  <div class = "field">
    <%= form.label :image2 %>
    <%= form.file_field :image2 %>
  </div>

  <div class = "field">
    <%= form.label :image3 %>
    <%= form.file_field :image3 %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>